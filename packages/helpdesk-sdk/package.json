{
  "name": "@livechat/helpdesk-sdk",
  "version": "1.2.1",
  "description": "SDK for extending HelpDesk App",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/livechat/products-sdk.git"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "dist/helpdesk-sdk.cjs.js",
  "module": "dist/helpdesk-sdk.es.js",
  "unpkg": "dist/helpdesk-sdk.umd.min.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src --ext .ts --fix",
    "prebuild": "rimraf dist && rimraf types",
    "test": "jest",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "@livechat/mitt": "0.1.2",
    "@livechat/postmessage": "0.3.2",
    "@livechat/widget-core-sdk": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "26.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "core-js": "3.0.1",
    "eslint": "^8.30.0",
    "husky": "2.7.0",
    "jest": "^30.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "1.17.0",
    "regenerator-runtime": "0.13.2",
    "rimraf": "2.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.2.3",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-uglify": "^4.0.0",
    "typescript": "3.4.5"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
